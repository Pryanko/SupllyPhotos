<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_category"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp"
    app:cardElevation="1dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/category_card_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:placeholderImage="@drawable/error_guide"
            app:actualImageScaleType="focusCrop"
            app:viewAspectRatio="2"
            
            />


        <TextView
            android:id="@+id/text_card_category"
            android:layout_marginTop="4dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp"
            android:textColor="@color/colorHeadPrimary"
            android:textSize="18sp"
            android:layout_below="@+id/category_card_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



    </RelativeLayout>

</android.support.v7.widget.CardView>