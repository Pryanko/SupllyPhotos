<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_image_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="6dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">



    <ImageView
        android:clickable="true"
        android:cropToPadding="true"
        android:id="@+id/image_gallery_item"
        android:layout_width="115dp"
        android:layout_height="115dp" />

        <ru.supplyphotos.design.GalleryCheckBox
            android:id="@+id/gallery_check_box"
            android:layout_alignBottom="@+id/image_gallery_item"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="4dp"
            android:layout_width="25dp"
            android:layout_height="25dp" />


        <RelativeLayout
            android:id="@+id/countView"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:background="@drawable/image_gallery_item"
            android:visibility="gone">

            <TextView
                android:id="@+id/delete_count_print"
                android:background="@drawable/button_count_print"
                android:textColor="@color/colorPrimaryDark"
                android:text="-"
                android:textSize="14sp"
                android:layout_toStartOf="@+id/count_text"
                android:layout_marginTop="2dp"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/count_text"
                android:background="@drawable/text_view_count_print"
                android:textColor="@color/colorPrimaryDark"
                android:layout_centerHorizontal="true"
                android:textSize="14sp"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/add_count_print"
                android:background="@drawable/button_count_print"
                android:textColor="@color/colorPrimaryDark"
                android:text="+"
                android:textSize="14sp"
                android:layout_toEndOf="@+id/count_text"
                android:layout_marginTop="2dp"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="20dp" />

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>